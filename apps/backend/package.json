{
	"name": "face-recognition-backend",
	"version": "1.0.0",
	"description": "Backend server for Face Recognition Platform",
	"main": "index.js",
	"scripts": {
		"start": "node index.js",
		"dev": "nodemon index.js",
		"lint": "eslint .",
		"format": "prettier --write .",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit"
	},
	"dependencies": {
		"axios": "^1.6.2",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"helmet": "^7.1.0",
		"mongoose": "^8.0.0",
		"morgan": "^1.10.1",
		"winston": "^3.11.0",
		"ws": "^8.14.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.26.0",
		"@types/jest": "^29.5.14",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.0.0",
		"globals": "^16.1.0",
		"jest": "^29.7.0",
		"jest-junit": "^16.0.0",
		"mongodb-memory-server": "^9.1.1",
		"nodemon": "^3.0.1",
		"prettier": "^3.5.3",
		"supertest": "^6.3.3"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"jest": {
		"testEnvironment": "node",
		"collectCoverageFrom": [
			"**/*.js",
			"!**/node_modules/**",
			"!**/coverage/**",
			"!**/tests/**"
		],
		"coverageThreshold": {
			"global": {
				"statements": 80,
				"branches": 70,
				"functions": 80,
				"lines": 80
			}
		},
		"coverageReporters": [
			"text",
			"lcov",
			"clover"
		],
		"testMatch": [
			"**/tests/**/*.test.js"
		],
		"reporters": [
			"default",
			[
				"jest-junit",
				{
					"outputDirectory": "./test-results",
					"outputName": "junit.xml"
				}
			]
		]
	}
}
